{{ template "base" . }}

{{ define "title" }}
		Virtual Termnal
{{ end }}

{{ define "content" }}
    <div class="content">

        <div class="row">

            <div class="col-2"></div> <!-- dummy left column -->

            <div class="col-8">

                <h1 class="mt-3">
                    Terminal
                </h1>

                <form action="/payment-succeeded"
                      method="post"
                      name="charge_form"
                      id="charge_form"
                      class="mt-3 d-block needs-validation charge-form"
                      autocomplete="off"
                      novalidate="">

                    <!-- Amoun input -->
                    <div class="mt-3">
                        <label for="amount"
                               class="form-label">Amount
                        </label>

                        <input class="form-control"
                               type="text"
                               id="amount"
                               name="amount"
                               required="">
                    </div>

                    <!-- Card Holder Name input -->
                    <div class="mt-3">
                        <label for="holder_name"
                               class="form-label">Cardholder Name
                        </label>

                        <input class="form-control"
                               type="text"
                               id="holder_name"
                               name="holder_name"
                               required="">
                    </div>

                    <!-- Email input -->
                    <div class="mt-3">
                        <label for="email"
                               class="form-label">Email
                        </label>

                        <input class="form-control"
                               type="email"
                               id="email"
                               name="email"
                               required="">
                    </div>

                    <!-- car number input will build by stripe -->
                    <div class="mt-3">
                            <label class="card-element form-label"
                               for="card_element">Credit Card
                        </label>

                        <div id="card_element"
                             class="form-control"></div>

                        <div class="alert-danger text-center" id="card-errors" role="alert"></div>
                        <div class="alert-success text-center" id="card-success" role="alert"></div>

                    </div>

                    <a href="javascript:void(0)"
                       class="mt-3 btn btn-outline-primary"
                       onclick="validate()"
                       id="pay_button">Charge Card
                    </a>

                </form>

            </div> <!-- end of center column -->

            <div class="col-2"></div> <!-- dummy right column -->

        </div> <!-- end of row -->

    </div>
{{ end }}

{{ define "js" }}
    <script src="https://js.stripe.com/v3/"></script>
    <script>
        let card;
        let stripe;

        stripe = Stripe("pk_test_51MUo7XLIB9oOE4eBF8Cz7QKu0mOgAFLCp5B5V7MwZKA7oNcK0PcmYrDmcpxe9GeDQ6xac4OFmgZmWVUn5nD5WHzi00QiToW769");

        function validate() {
                    // validates form on submit
        }

        (function() {
                    const elements = stripe.elements();
                    const style = {
                                base: {
                                            fontSize: "16px",
                                            lineHight: "24px",
                                }
                    };

                    card = elements.create("card", {
                                style: style,
                                hidePostalCode: true,
                    });

                    card.mount("#card_element");

                    card.addEventListener("change", function(e) {
                                var err = document.getElementById("card-errors");
                                if (e.error) {
                                            err.classList.remove("d-none");
                                            err.textContent = e.error.message;
                                } else {
                                            err.classList.add("d-none");
                                            err.textContent = "";
                                }
                    });
        })();
    </script>
{{ end }}
