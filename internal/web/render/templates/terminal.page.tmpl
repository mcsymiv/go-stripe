{{ template "base" . }}

{{ define "title" }}
		Virtual Termnal
{{ end }}

{{ define "content" }}
    <div class="content">

        <div class="row">

            <div class="col-2"></div> <!-- dummy left column -->

            <div class="col-8">

                <h1 class="mt-3">
                    Terminal
                </h1>

                <div class="alert alert-danger text-center d-none"
                         id="card_messages">
                </div>

                <form action="/payment-succeeded"
                      method="post"
                      name="charge_form"
                      id="charge_form"
                      class="mt-3 d-block needs-validation charge-form"
                      autocomplete="off"
                      novalidate="">

                    <!-- Amoun input -->
                    <div class="mt-3">
                        <label for="amount"
                               class="form-label">Amount
                        </label>

                        <input class="form-control"
                               type="text"
                               id="amount"
                               name="amount"
                               required="">
                    </div>

                    <!-- Card Holder Name input -->
                    <div class="mt-3">
                        <label for="holder_name"
                               class="form-label">Cardholder Name
                        </label>

                        <input class="form-control"
                               type="text"
                               id="holder_name"
                               name="holder_name"
                               required="">
                    </div>

                    <!-- Email input -->
                    <div class="mt-3">
                        <label for="email"
                               class="form-label">Email
                        </label>

                        <input class="form-control"
                               type="email"
                               id="email"
                               name="email"
                               required="">
                    </div>

                    <!-- car number input will build by stripe -->
                    <div class="mt-3">
                            <label class="card-element form-label" for="card_element">
                                Credit Card
                            </label>

                        <div id="card_element"
                             class="form-control">
                        </div>

                        <div class="alert-danger text-center" id="card-errors" role="alert"></div>
                        <div class="alert-success text-center" id="card-success" role="alert"></div>

                    </div>

                    <a href="javascript:void(0)"
                       class="mt-3 btn btn-outline-primary"
                       onclick="validate()"
                       id="pay_button">Charge Card
                    </a>

                    <div id="processing_payment"
                        class="text-center d-none">
                        <div class="spinner-border text-primary"
                            role="status">
                            <span class="visually-hidden">
                                Loading...
                            </span>
                        </div>
                    </div>

                    <input type="hidden"
                           name="payment_intent"
                           id="payment_intent">

                    <input type="hidden"
                           name="payment_method"
                           id="payment_method">

                    <input type="hidden"
                           name="payment_amount"
                           id="payment_amount">

                    <input type="hidden"
                           name="payment_currency"
                           id="payment_currency">

                </form>

            </div> <!-- end of center column -->

            <div class="col-2"></div> <!-- dummy right column -->

        </div> <!-- end of row -->

    </div>
{{ end }}

{{ define "js" }}
    {{ template "form-js" . }}
{{ end }}
