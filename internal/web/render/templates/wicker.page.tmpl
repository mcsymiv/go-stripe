{{ template "base" . }}

{{ define "title" }}
	Wicker
{{ end }}

{{ define "content" }}

	<div class="row mt-5">
		
		<div class="col-2"></div>

		<div class="col-8">
			<div class="card">

				<img src="/static/images/{{ .StringMap "itemName" }}.png" 
					class="card-img-top" 
					alt="{{ .StringMap "itemName" }}">

				<div class="card-body">
					<h5 class="card-title">
						{{ .StringMap "itemName" }}
					</h5>

					<p class="card-text">
						This is a fine, man-made wicker {{ .StringMap "itemName" }}.
					</p>

					<a href="#" class="btn btn-primary">
							Buy {{ .StringMap "itemName" }}
					</a>
				</div>
			</div>
		</div>

		<div class="col-2"></div>

	</div>
{{ end }}

